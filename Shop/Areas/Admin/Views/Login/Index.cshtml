@model Shop.Areas.Admin.Model.DangNhapModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng Nhập</h3></div>
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-floating mb-3">
                                <div class="col-md-12" style="margin-left:-10px;">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })

                                <label for="inputEmail">Tên Đăng nhập</label>
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                                <label for="inputEmail">Mật Khẩu</label>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="form-check mb-3" style="margin-left: -19px;">
                                    @Html.EditorFor(model => model.NhoMatKhau, new { @class = "form-check-input" })
                                    @Html.LabelFor(model => model.NhoMatKhau, new { @class = "form-check-label" })
                                    @Html.ValidationMessageFor(model => model.NhoMatKhau, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" href="/Admin/Login/ResetMatKhau">Quên mật khẩu?</a>

                                <button class="btn btn-primary">Đăng nhập</button>
                            </div>

                        }

                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href="/Admin/NguoiDung/ThemNguoiDung">Tài khoản khác? Đăng Ký!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

