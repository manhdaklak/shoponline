<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Scripts.Render("/bundles/modernizr")
    <link href="/Content/img/favicon.ico" rel="icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">
    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="/Content/lib/slick/slick.css" rel="stylesheet">
    <link href="/Content/lib/slick/slick-theme.css" rel="stylesheet">
    <!-- Template Stylesheet -->
    <link href="/Content/css/style.css" rel="stylesheet" />
   
</head>
<body>
    <!-- Top bar Start -->
    <div class="top-bar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <i class="fa fa-envelope"></i>
                    manh0974@gmail.com
                </div>
                <div class="col-sm-6">
                    <i class="fa fa-phone-alt"></i>
                    0964785134
                </div>
            </div>
        </div>
    </div>
    <!-- Top bar End -->
    <!-- Nav Bar Start -->
    <div class="nav">
        <div class="container-fluid">
            @RenderPage("_Menu.cshtml")
        </div>
    </div>
    <!-- Nav Bar End -->
    <!-- Bottom Bar Start -->
    <div class="bottom-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a href="index.html">
                            <img src="/Content/img/logo2.PNG" />
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    @using (Html.BeginForm("SanPham", "SanPham", FormMethod.Get))
                    {
                        <div class="search">
                            <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Tìm kiếm">
                            <button><i class="fa fa-search"></i></button>
                        </div>
                    }

                </div>
                <div class="col-md-3">
                    @{ Html.RenderAction("HeaderCart", "Home");}
                </div>
            </div>
        </div>
    </div>
    <!-- Bottom Bar End -->

    <div style="width:auto">
        @RenderBody()
    </div>
    <!-- Footer Start -->
    <div class="footer">
        @RenderPage("_Footer.cshtml")
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>

    <script src="/Content/lib/easing/easing.min.js"></script>
    <script src="/Content/lib/slick/slick.min.js"></script>

    <!-- Template Javascript -->
    <script src="/Content/js/main.js"></script>
    @Scripts.Render("/bundles/jquery")
    @Scripts.Render("/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
