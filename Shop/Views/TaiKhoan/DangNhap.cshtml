@model Shop.Models.LoginModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("DangNhap", "TaiKhoan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="login" style="background-color:aqua">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <img  src="/Content/img/12.png" />
                </div>
                <div class="col-lg-4">
                    <div class="login-form">
                        
                        <div class="row">
                            <div class="col-md-12">
                                <h3>Đăng Nhập</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.TenDN)
                                @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.MatKhau)
                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12">
                                <div style="padding-left:5px;" class="custom-control custom-checkbox">
                                    @Html.EditorFor(model => model.NhoMatKhau)
                                    @Html.LabelFor(model => model.NhoMatKhau)
                                    @Html.ValidationMessageFor(model => model.NhoMatKhau, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <button class="btn btn-block">Đăng nhập</button>
                            </div>
                            <div class="col-lg-12" style="margin-top:10px; ">
                                <a style="color: #000000;" href="#">Quên mật khẩu ?</a>
                            </div>
                        </div>
                        <div class="row" style="margin-top:20px;">
                            <div class="col-md-4">
                                <btn class="btn btn-block" style="background-color:#0094ff;color:white">
                                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span> FaceBook
                                </btn>
                            </div>
                            <div class="col-md-4">
                                <btn class="btn btn-block" style="background-color:#0094ff; color:white">
                                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Google
                                </btn>
                            </div>
                            <div class="col-md-4">
                                <btn class="btn btn-block" style="background-color:#000000">
                                    <span class="glyphicon glyphicon-apple" aria-hidden="true"></span>Apple
                                </btn>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

